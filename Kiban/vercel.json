{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "installCommand": "npm install",
    "buildCommand": "npm run build"
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}